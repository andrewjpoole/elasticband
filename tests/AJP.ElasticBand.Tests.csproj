    <IsPackable>false</IsPackable>

    <AssemblyName>AJP.ElasticBand.Tests</AssemblyName>

    <RootNamespace>AJP.ElasticBand.Tests</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="TestData\es_agg_query.txt" />
    <None Remove="TestData\es_query2.txt" />
  </ItemGroup>

  <ItemGroup>
